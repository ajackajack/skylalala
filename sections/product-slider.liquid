{{ 'section-product-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-product-card.css' | asset_url | stylesheet_tag }}

<section class="o-section c-section--product-slider">
    <div class="o-section__wrapper c-product-slider">
        <header>
            <h2 class="c-product-slider__title">
                {{ section.settings.title | escape }}
            </h2>
            <p class="c-product-slider__sub-title">
                {{ section.settings.sub_title | escape }}
            </p>
        </header>
        {%- if section.settings.collection != blank -%}
        <div class="c-product-slider__slider js-product-slider">
            {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
                {%- render 'product-card', card_product: product, button_label: section.settings.button_label -%}
            {%- endfor -%}
        </div>
        {%- endif -%}
    </div>
</section>

{%- schema -%}
{
    "name" : "Product Slider",
    "settings" : [
        {
            "id" : "title",
            "type" : "text",
            "label" : "Title",
            "default" : "Product Slider"
        },
        {
            "id" : "sub_title",
            "type" : "textarea",
            "label" : "Description",
            "default" : "Product Slider Description"
        },
        {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button Label",
            "default": "Add To Cart"
        }
    ]
}
{%- endschema -%}